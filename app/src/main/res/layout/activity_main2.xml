<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginStart="30px"
        android:layout_marginLeft="20px"
        app:srcCompat="@drawable/gambar1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="310dp"
        android:layout_marginStart="30px"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30px"
        android:layout_toRightOf="@id/imageView4"
        android:text="Wisata pantai memang masih menjadi favorit bagi para wisatawan yang ingin berlibur. Dengan panorama alam yang menakjubkan, tak heran jika pantai menjadi destinasi pilihan hingga kini. Tak hanya itu, berlibur ke pantai juga menjadi salah satu cara untuk menghilangkan penat."
        android:textStyle="bold"
        android:textSize="8pt" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="191dp"
        android:layout_height="300dp"
        android:layout_below="@id/textView"
        android:layout_alignRight="@id/textView"
        android:layout_marginEnd="20px"
        android:layout_marginRight="20px"
        app:srcCompat="@drawable/gambar2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginStart="30px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="40px"
        android:layout_marginEnd="30px"
        android:layout_marginRight="30px"

        android:layout_toLeftOf="@id/imageView5"
        android:text="Terdapat beragam aktivitas yang bisa dilakukan selama berlibur ke pantai, mulai snorkeling, diving, bermain pasir, berjemur, atau sekedar bersantai di tepi pantai. Ada beragam pantai indah nan eksotis yang patut untuk dikunjungi."
        android:textStyle="bold"
        android:textSize="8pt" />
</RelativeLayout>